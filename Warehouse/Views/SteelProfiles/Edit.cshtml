@model Warehouse.ViewModels.SteelProfileEditViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm("SaveEdited", "SteelProfiles"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
