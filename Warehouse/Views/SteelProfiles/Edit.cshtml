                @Html.EditorFor(m => m.SteelProfile.Quantity, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.SteelProfile.Quantity, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.SteelProfile.Length, htmlAttributes: new { @class = "control-label col-md-2" })
